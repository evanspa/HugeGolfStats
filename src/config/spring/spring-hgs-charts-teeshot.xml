<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" 
	"http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
		
	<!-- CHART CATEGORIES -->
	<bean id="teeshotChartCategory" class="name.paulevans.golf.bean.chart.ChartCategory" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.heading" />
		<property name="chartGroups">
			<list>
				<ref bean="TeeshotGroup" />
			</list>
		</property>
	</bean>
	
	<!-- Teeshot chart group -->
	<bean id="TeeshotGroup" class="name.paulevans.golf.bean.chart.ChartGroup" singleton="true">
		<property name="charts">
			<list>
				<ref bean="FairwayHitPercentageTrendChart" />
				<ref bean="AccuracyBreakdownPieChart" />
				<ref bean="AccuracyFullBreakdownTrendChart" />
				<ref bean="AccuracyFullBreakdownPieChart" />
				<ref bean="DriveDistanceTrendChart" />
				<ref bean="LongDriveDistanceTrendChart" />
			</list>
		</property>
	</bean>
	
	<!-- TEESHOT CHARTS -->
	<bean id="FairwayHitPercentageTrendChart" class="name.paulevans.golf.bean.chart.teeshot.FairwayHitPercentageTrend" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.fairwayhitpercentage.trend" />
	</bean>
	<bean id="AccuracyBreakdownPieChart" class="name.paulevans.golf.bean.chart.teeshot.AccuracyBreakdownPie" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.breakdown.pie" />
	</bean>
	<bean id="AccuracyFullBreakdownTrendChart" class="name.paulevans.golf.bean.chart.teeshot.AccuracyFullBreakdownTrend" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.fullbreakdown.trend" />
	</bean>
	<bean id="AccuracyFullBreakdownPieChart" class="name.paulevans.golf.bean.chart.teeshot.AccuracyFullBreakdownPie" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.fullbreakdown.pie" />
	</bean>
	<bean id="DriveDistanceTrendChart" class="name.paulevans.golf.bean.chart.teeshot.DriveDistanceTrend" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.drivedistance.trend" />
	</bean>
	<bean id="LongDriveDistanceTrendChart" class="name.paulevans.golf.bean.chart.teeshot.LongDriveDistanceTrend" singleton="true">
		<property name="titleKey" value="yourstats.teeshot.charts.longestdrive.trend" />
	</bean>
</beans>